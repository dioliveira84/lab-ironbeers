<div class="card" style="width: 100%;">
  <img class="card-img-top beer-pic" src="{{this.image_url}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.tagline}}</h6>
    <p class="card-text">{{this.description}}</p>
  </div>

  <div class="card-body">
    <h5 class="card-title">Food Paring</h5>
    <ul>
      {{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>Brewers Tips: {{this.brewers_tips}}</p>
  </div>

</div>