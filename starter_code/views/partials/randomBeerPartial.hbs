{{!-- should display an image, name, description, tagline, food pairing and brewer tips. --}}

<div class="card" style="width: 33.333%;">
  <img class="card-img-top beer-image" src="{{this.image_url}}" alt="Card image cap">

  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.tagline}}</p>
    <p class="card-text">{{this.description}}</p>
  </div>

  <div class="card-body">
    <h5 class="card-title">Food Paring</h5>
    <ul>
      {{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>Brewers Tips: {{this.brewers_tips}}</p>
  </div>

</div>